<LoginPage>:
    MDBoxLayout:
        orientation: "vertical"
        padding: [50, 160]
        spacing: 20
        md_bg_color: 0.9, 0.9, 0.95, 1  # Light grayish blue background

        MDLabel:
            text: "To-Do_List!"
            halign: "center"
            font_style: "H3"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            bold: True
            size_hint_y: None
            height: "40dp"

        MDLabel:
            text: "Login to Continue"
            halign: "center"
            font_style: "Body1"
            theme_text_color: "Custom"
            text_color: 0.6, 0.6, 0.6, 1
            size_hint_y: None
            height: "40dp"

        MDTextField:
            id: username_input
            hint_text: "Username"
            font_size: 15
            size_hint: 0.8, None
            height: "50dp"
            multiline: False
            mode: "fill"
            radius: [25, 25, 25, 25]
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password_input
            hint_text: "Password"
            password: True
            font_size: 15
            size_hint: 0.8, None
            height: "50dp"
            multiline: False
            mode: "fill"
            radius: [25, 25, 25, 25]
            pos_hint: {"center_x": 0.5}

        MDBoxLayout:
            orientation: "horizontal"
            spacing: "10dp"
            size_hint: 0.8, None
            height: "50dp"
            pos_hint: {"center_x": 0.5}

            MDRaisedButton:
                text: "Login"
                font_size: 18
                size_hint_x: 0.5
                md_bg_color: 0.1, 0.5, 0.8, 1
                text_color: 1, 1, 1, 1
                radius: [25, 25, 25, 25]
                on_release: root.login()

            MDRaisedButton:
                text: "Register"
                font_size: 18
                size_hint_x: 0.5
                md_bg_color: 0.4, 0.4, 0.4, 1
                text_color: 1, 1, 1, 1
                radius: [25, 25, 25, 25]
                on_release: app.root.current = "register"
